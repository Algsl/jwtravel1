.main{
  width: 100%;
  height: 100%;
  position: fixed;
  background:#F7F9FC;
}

.top{
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: row;
}
.top_bar{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color:#A0A3AF;
}
.on{
  color: #515666;
  font-size: 28rpx;
  border-bottom:5rpx solid #1EC996;
}

.hint{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 32rpx;
  color: #515666;
}